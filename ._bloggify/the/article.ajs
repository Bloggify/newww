<% include("includes/header") %>
<div class="top-header">
    <a href="/">
        <img src="/images/article-img.png" />
        <h1><%- siteMetadata.siteTitle %></h1>
    </a>
</div>
<div class="container">
    <div class="content single-article">
        <h1 class="article-title"><%= article.metadata.title %></h1>
        <% if (article.metadata.date || article.metadata.author) { %>
            <p class="article-date">
                <i class="fa fa-calendar"></i>
                <% if (article.metadata.date) { %>
                Posted on <%= article.metadata.date %>
                <% } %>
                <% if (article.metadata.author) { %>
                by <a href="/"><%= article.metadata.author %></a>
                <% } %>
            </p>
        <% } %>
        <% if (article.metadata.tags && article.metadata.tags.length) { %>
            <p class="article-tags">
                <i class="fa fa-tags"></i> Tagged as:
                <% article.metadata.tags.forEach(function (c, i, arr) { %>
                    <span class="tag"><%= c %></span><%= i === arr.length - 1 ? "" : "," %>
                <% }) %>
            </p>
        <% } %>

        <div class="markdown"><%- article.html %></div>

        <div class="blog-feedback">
            <p class="blog-feedback-header">Have feedback on this article? Let <a href="https://twitter.com/intent/tweet?text=@IonicaBizau%20&amp;amp;related=IonicaBizau&amp;url=http://ionicabizau.net/blog/28-how-i-ported-memory-blocks-to-modern-web"
                target="blank">@IonicaBizau</a> know on Twitter.</p>
            <p class="blog-feedback-description">Have any questions or suggestions? <a href="/contact">Contact me.</a> Found
                a bug? <a href="https://github.com/Bloggify/Bloggify/issues/new">Report it now</a>
            </p>
        </div>
    </div>
</div>

<% include("includes/footer") %>
