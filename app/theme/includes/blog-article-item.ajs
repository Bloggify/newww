<% var articleImage = article.image %>

<article class="article-item <%= articleImage ? 'has-image' : 'no-image' %>">

    <div class="article-item-top">
        <div class="row">
            <div class="col-md-12">
                <div class="long-dash">â€” </div>
                <a href="<%= article.url %>" class="article-title-top">
                    <h1> <%= article.title %></h1>
                </a>
                <div class="summary-top">
                    <% if (article.summary) { %>
                        <%- article.summary %>
                    <% } else { %>
                        <%- article.content.slice(0, 100) + "..." %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <% if (articleImage) { %>
        <div class="article-img">
            <a href="<%= article.url %>">
                <img src="<%= _public(articleImage) %>">
            </a>
        </div>
    <% } %>

    <div class="article-bottom-side">
        <div class="row article-info">
            <% if (article.date) { %>
                <div class="col-xs-5 hidden-xs">
                    <p class="article-section-name">Date</p>
                    <p class="article-section-value"><%= article.date.format("LL") %></p>
                </div>
            <% } %>
            <% if (article.category) { %>
                <div class="col-xs-3 hidden-xs">
                    <p class="article-section-name">Posted in</p>
                    <p class="article-section-value"><%= article.category %></p>
                </div>
            <% } %>
            <% if (article.author) { %>
                <div class="col-xs-3 hidden-xs hidden-sm">
                    <p class="article-section-name">Written by</p>
                    <p class="article-section-value"><%= article.author %></p>
                </div>
            <% } %>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <a href="<%= article.url %>" class="read-more bottom" title="Read more">
                    <span class="icon icon-triangle-right"></span>
                </a>
            </div>
        </div>
    </div>

</article>
