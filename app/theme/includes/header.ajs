<!DOCTYPE html>
<html lang="en">
    <head>
        <%
            var description = page.summary || siteMetadata.description;
            var ogImage = _public(page.image || theme.defaultOgImage, true);
        %>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title><%= title %> | <%= Bloggify.options.title %></title>

        <meta name="application-name" content="<%= siteMetadata.siteTitle %>">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Control the behavior of search engine crawling and indexing -->
        <meta name="robots" content="index,follow,noodp"><!-- All Search Engines -->
        <meta name="googlebot" content="index,follow"><!-- Google Specific -->

        <meta name="description" content="<%= description %>">
        <meta name="author" content="<%= page.author || 'Bloggify' %>">

        <meta name="google" content="nositelinkssearchbox">
        <meta name="subject" content="<%= description %>">
        <meta name="abstract" content="<%= description %>">
        <meta name="url" content="<%= siteMetadata.domain %>">
        <meta name="directory" content="submission">
        <meta name="rating" content="General">

        <!-- Facebook -->
        <meta property="og:url" content="<%= lien.href %>">

        <meta property="og:type" content="website">
        <meta property="og:title" content="<%= title %>">

        <% if (ogImage) { %>
        <meta property="og:image" content="<%= ogImage %>">
        <meta name="twitter:image" content="<%= ogImage %>">
        <meta itemprop="image" content="<%= ogImage %> ">
        <% } %>

        <% if (page.author) { %>
        <meta name="article:author" content="<%= page.author %>">
        <% } %>

        <meta property="og:site_name" content="<%= siteMetadata.siteTitle %>">
        <meta property="og:locale" content="en_US">
        <meta property="og:description" content="<%= description %>">

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image">

        <% if (siteMetadata.twitter) { %>
            <meta name="twitter:site" content="<%= siteMetadata.twitter %>">
        <% } %>

        <meta name="twitter:url" content="<%= lien.href %>">
        <meta name="twitter:title" content="<%= title %>">
        <meta name="twitter:description" content="<%= description %>">

        <!-- Google -->
        <link href="https://plus.google.com/+YourPage" rel="publisher">
        <meta itemprop="name" content="<%= title %>">
        <meta itemprop="description" content="<%= description %>">

        <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
        <link rel="shortcut icon" href="<%= _public('/img/logo.png') %>">

        <script>
            window.BloggifyPage = {
                query: <%= stringify(ctx.query) %>
            }
        </script>

        <%- Bloggify.assets.html() %>
        <% include("../styles/critical") %>
    </head>
    <body class="fh5co-overflow template-<%= template %>">
        <div id="fh5co-page">
            <nav class="fh5co-nav-style-1" role="navigation" data-offcanvass-position="fh5co-offcanvass-left">
                <div class="container">
                    <div class="col-md-3 col-sm-3 col-xs-12 fh5co-logo">
                        <a href="#" class="js-fh5co-mobile-toggle fh5co-nav-toggle"><i></i></a>
                        <a href="/" class="logo">
                            <img src="<%= _public('/img/logo.svg') %>">
                        </a>
                    </div>
                    <div class="col-md-6 col-sm-6 text-center fh5co-link-wrap">
                        <% include("menu") %>
                    </div>
                    <div class="col-md-3 col-sm-3 text-right fh5co-link-wrap">
                        <ul class="fh5co-special" data-offcanvass="yes">
                            <li><a href="<%= theme.previewLink %>" class="call-to-action">Preview</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
